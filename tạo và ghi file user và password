import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

public class UserInfoStorage {

    public static void main(String[] args) {
        String folderPath = "Data";
        String filePath = folderPath + "/Login.txt";

        String username = "user123";
        String password = "pass456";

        createFolderIfNotExists(folderPath);
        writeUserInfoToFile(filePath, username, password);
    }

    public static void createFolderIfNotExists(String folderPath) {
        File folder = new File(folderPath);
        if (!folder.exists()) {
            if (folder.mkdirs()) {
                System.out.println("Thư mục '" + folderPath + "' đã được tạo.");
              // nếu file chưa tồn tại tạo mới, nếu đã tồn tại chuyển về màn hình file đã được tạo
            } else {
                System.out.println("Không thể tạo thư mục '" + folderPath + "'.");
            }
        }
    }

    // Hàm ghi thông tin người dùng vào file
    public static void writeUserInfoToFile(String filePath, String username, String password) {
        try (FileWriter writer = new FileWriter(filePath, true)) {  // 'true' để ghi tiếp vào file mà không ghi đè
            writer.write("Username: " + username + ", Password: " + password + "\n");
            System.out.println("Đã lưu thông tin người dùng vào file '" + filePath + "'.");
        } catch (IOException e) {
            System.out.println("Có lỗi xảy ra khi ghi file: " + e.getMessage());
        }
    }
}
